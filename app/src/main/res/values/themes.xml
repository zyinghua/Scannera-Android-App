<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Food_Product_Comparison_Android_App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/denim</item>
        <item name="colorPrimaryDark">@color/chathams_blue</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/mystic</item>
        <item name="colorOnError">@color/cardinal</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorAccent">@color/denim</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.Scannera.TextInputLayout.OutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Scannera.TextInputLayout.HintText</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="errorEnabled">true</item>
        <item name="startIconContentDescription">@string/content_description_start_icon</item>
        <item name="endIconContentDescription">@string/content_description_end_icon</item>
        <item name="boxStrokeColor">@color/textInputOutlineColor</item>
    </style>

    <style name="TextAppearance.Scannera.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Widget.Scannera.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="cornerRadius">@dimen/round_btn_corner_radius</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">
            @animator/button_state_list_anim
        </item>
    </style>

    <style name="Widget.Scannera.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/roboto_slab</item>
    </style>

    <style name="Widget.Scannera.ProductFeedTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/product_feed_text_size</item>
        <item name="android:fontFamily">@font/roboto_slab</item>
    </style>

</resources>
