<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgottenPasswordActivity">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/top_close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:src="@drawable/ic_close"
        android:contentDescription="@string/close_btn_content_description"
        app:layout_constraintBottom_toTopOf="@+id/close_btn_h_guideline"
        app:layout_constraintEnd_toStartOf="@+id/close_btn_v_guideline"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_slab"
        android:text="@string/forgot_your_password_title"
        android:textColor="@color/denim"
        android:textSize="@dimen/small_title_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/close_btn_h_guideline" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/email_sent_animation"
        android:layout_width="@dimen/lottie_square_animation_size"
        android:layout_height="@dimen/lottie_square_animation_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/email_sent" />

    <TextView
        android:id="@+id/forgotten_password_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/login_layout_margin"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="@dimen/login_layout_margin"
        android:fontFamily="@font/roboto_slab"
        android:gravity="center"
        android:text="@string/forgotten_password_instruction"
        android:textColor="@color/chathams_blue"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_sent_animation" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/close_btn_h_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/close_btn_v_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />
</androidx.constraintlayout.widget.ConstraintLayout>